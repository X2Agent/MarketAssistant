<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MarketAssistant.ViewModels.Demo"
             xmlns:components="using:MarketAssistant.Views.Components"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="600"
             x:Class="MarketAssistant.Views.Demo.ChatSidebarDemoView"
             x:DataType="vm:ChatSidebarDemoViewModel">

    <Grid ColumnDefinitions="300,*">
        <!-- 控制面板 -->
        <ScrollViewer Grid.Column="0" Padding="10">
            <StackPanel Spacing="10">
                <TextBlock Text="测试控制面板" FontWeight="Bold" FontSize="16"/>
                
                <Button Content="添加纯文本消息 (AI)" Command="{Binding AddTextMessageCommand}" CommandParameter="这是一条普通的纯文本消息。" HorizontalAlignment="Stretch"/>
                <Button Content="添加纯文本消息 (User)" Command="{Binding AddUserMessageCommand}" CommandParameter="这是一条用户发送的消息。" HorizontalAlignment="Stretch"/>
                <Button Content="添加 Markdown 消息" Command="{Binding AddMarkdownMessageCommand}" HorizontalAlignment="Stretch"/>
                
                <TextBlock Text="Adaptive Cards" FontWeight="Bold" Margin="0,10,0,0"/>
                
                <Button Content="Coordinator Result" Command="{Binding AddAdaptiveCardCommand}" 
                        CommandParameter="{Binding CoordinatorCardJson}" HorizontalAlignment="Stretch"/>

                <Button Content="Financial Analysis" Command="{Binding AddAdaptiveCardCommand}" 
                        CommandParameter="{Binding FinancialCardJson}" HorizontalAlignment="Stretch"/>

                <Button Content="Fundamental Analysis" Command="{Binding AddAdaptiveCardCommand}" 
                        CommandParameter="{Binding FundamentalCardJson}" HorizontalAlignment="Stretch"/>

                <Button Content="News Analysis" Command="{Binding AddAdaptiveCardCommand}" 
                        CommandParameter="{Binding NewsCardJson}" HorizontalAlignment="Stretch"/>

                <Button Content="Sentiment Analysis" Command="{Binding AddAdaptiveCardCommand}" 
                        CommandParameter="{Binding SentimentCardJson}" HorizontalAlignment="Stretch"/>

                <Button Content="Technical Analysis" Command="{Binding AddAdaptiveCardCommand}" 
                        CommandParameter="{Binding TechnicalCardJson}" HorizontalAlignment="Stretch"/>

                <Button Content="清空消息" Command="{Binding ClearMessagesCommand}" Background="Red" Foreground="White" HorizontalAlignment="Stretch" Margin="0,20,0,0"/>
            </StackPanel>
        </ScrollViewer>

        <!-- 聊天侧边栏 -->
        <Border Grid.Column="1" BorderBrush="Gray" BorderThickness="1">
            <components:ChatSidebarView DataContext="{Binding TargetViewModel}"/>
        </Border>
    </Grid>
</UserControl>
