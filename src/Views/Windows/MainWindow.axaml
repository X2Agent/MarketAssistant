<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:vm="using:MarketAssistant.ViewModels"
        xmlns:infra="using:MarketAssistant.Infrastructure.Core"
        xmlns:converts="using:MarketAssistant.Converts"
        xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Svg.Controls.Skia.Avalonia"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
        x:Class="MarketAssistant.Views.Windows.MainWindow"
        x:DataType="vm:MainWindowViewModel"
        Icon="/Assets/logo.ico"
        Title="MarketAssistant - 智能股票分析助手"
        MinWidth="{StaticResource MainWindowMinWidth}"
        MinHeight="{StaticResource MainWindowMinHeight}">

    <Design.DataContext>
        <vm:MainWindowViewModel/>
    </Design.DataContext>

    <Window.Resources>
        <infra:ViewLocator x:Key="ViewLocator"/>
        <converts:NavigationIconConverter x:Key="NavigationIconConverter"/>
    </Window.Resources>

    <Grid ColumnDefinitions="72,*" RowDefinitions="Auto,*">
        <!-- 左侧图标导航栏 -->
        <Border Grid.Column="0"
                Grid.Row="0"
                Grid.RowSpan="2"
                Background="{DynamicResource CardBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="{StaticResource RightBorderThickness}">
            <StackPanel Margin="{StaticResource LogoTopMargin}" Spacing="{StaticResource TinySpacing}">
                <!-- 应用Logo图标 -->
                <Border Margin="{StaticResource LogoBottomMargin}" 
                        Width="{StaticResource AppLogoSize}"
                        Height="{StaticResource AppLogoSize}"
                        CornerRadius="{StaticResource DefaultCornerRadius}"
                        HorizontalAlignment="Center"
                        ToolTip.Tip="MarketAssistant"
                        ClipToBounds="True">
                    <Image Source="/Assets/logo.png"
                           Stretch="UniformToFill"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
                </Border>

                <!-- 导航菜单 -->
                <ListBox ItemsSource="{Binding NavigationItems}"
                         SelectedItem="{Binding SelectedNavigationItem}"
                         Background="Transparent"
                         BorderThickness="{StaticResource NoBorderThickness}"
                         Padding="0">
                    <ListBox.Styles>
                        <Style Selector="ListBoxItem">
                            <Setter Property="Padding" Value="0"/>
                            <Setter Property="Margin" Value="{StaticResource SmallMargin}"/>
                            <Setter Property="Width" Value="{StaticResource FABSize}"/>
                            <Setter Property="Height" Value="{StaticResource AppLogoSize}"/>
                            <Setter Property="CornerRadius" Value="{StaticResource DefaultCornerRadius}"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="HorizontalContentAlignment" Value="Center"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Style>
                        <Style Selector="ListBoxItem:selected">
                            <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
                        </Style>
                    </ListBox.Styles>
                    <ListBox.ItemTemplate>
                        <DataTemplate x:DataType="vm:NavigationItemViewModel">
                            <!-- 图标 -->
                            <Panel Width="{StaticResource DefaultIconSize}" 
                                   Height="{StaticResource DefaultIconSize}"
                                   HorizontalAlignment="Center"
                                   VerticalAlignment="Center"
                                   ToolTip.Tip="{Binding Title}">
                                <svg:Svg Width="{StaticResource DefaultIconSize}" 
                                        Height="{StaticResource DefaultIconSize}" 
                                        Path="{Binding IconPath}"/>
                                <svg:Svg Width="{StaticResource DefaultIconSize}" 
                                        Height="{StaticResource DefaultIconSize}" 
                                        Path="{Binding SelectedIconPath}" 
                                        IsVisible="{Binding $parent[ListBoxItem].IsSelected}"/>
                            </Panel>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- 顶部导航栏 -->
        <Border Grid.Column="1" 
                Grid.Row="0"
                Background="{DynamicResource CardBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="{StaticResource NavBarBottomBorder}"
                IsVisible="{Binding CanGoBack}">
            <StackPanel Orientation="Horizontal" 
                        Spacing="{StaticResource SmallSpacing}" 
                        Margin="{StaticResource PagePadding}">
                <Button Command="{Binding GoBackCommand}"
                        Background="Transparent"
                        BorderThickness="{StaticResource NoBorderThickness}"
                        Padding="{StaticResource SmallMargin}"
                        ToolTip.Tip="返回">
                    <StackPanel Orientation="Horizontal" Spacing="{StaticResource TinySpacing}">
                        <TextBlock Text="←" 
                                   FontSize="{StaticResource SubTitleFontSize}" 
                                   VerticalAlignment="Center"/>
                        <TextBlock Text="返回" 
                                   FontSize="{StaticResource LabelFontSize}" 
                                   VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
                
                <Border Width="{StaticResource DividerHeight}" 
                        Height="{StaticResource SmallIconSize}" 
                        Background="{DynamicResource BorderBrush}"
                        VerticalAlignment="Center"
                        IsVisible="{Binding CanGoBack}"/>
                
                <TextBlock Text="{Binding CurrentPageTitle}" 
                           FontSize="{StaticResource LabelFontSize}"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           Foreground="{DynamicResource TextPrimaryBrush}"/>
            </StackPanel>
        </Border>

        <!-- 右侧内容区域 -->
        <ContentControl Grid.Column="1"
                        Grid.Row="1"
                        Content="{Binding CurrentPage}"
                        ContentTemplate="{StaticResource ViewLocator}"/>
    </Grid>

</Window>
