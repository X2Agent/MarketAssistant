<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MarketAssistant.ViewModels"
             xmlns:converts="using:MarketAssistant.Converts"
             xmlns:controls="using:MarketAssistant.Views.Controls"
			 xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Svg.Controls.Skia.Avalonia"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MarketAssistant.Views.Pages.AboutPageView"
             x:DataType="vm:AboutPageViewModel">

    <Design.DataContext>
        <vm:AboutPageViewModel/>
    </Design.DataContext>

    <ScrollViewer Background="{DynamicResource CardBackgroundBrush}">
        <StackPanel Spacing="16" Margin="16">
            
            <!-- 顶部应用信息区域 -->
            <controls:CardView>
                <controls:CardView.Header>
                    <Grid ColumnDefinitions="*,Auto">
                        <TextBlock Grid.Column="0"
                                   Text="关于我们"
                                   FontSize="18"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                   VerticalAlignment="Center"/>
                        <Border Grid.Column="1"
                                Background="Transparent"
                                CornerRadius="12"
                                Padding="8"
                                BorderThickness="0">
                            <Button Background="Transparent"
                                    BorderThickness="0"
                                    Padding="0"
                                    Width="20"
                                    Height="20"
                                    Command="{Binding OpenGitHubCommand}">
                                <svg:Svg Path="/Assets/Images/github.svg"
                                         Width="20"
                                         Height="20"/>
                            </Button>
                        </Border>
                    </Grid>
                </controls:CardView.Header>
                <!-- Logo和应用信息 -->
                <Panel Margin="-16">
                    <Panel.Background>
                        <SolidColorBrush Color="{DynamicResource ItemBackground}"/>
                    </Panel.Background>
                <Grid ColumnDefinitions="Auto, *, Auto"
                      RowDefinitions="Auto"
                      Margin="16">
                    <!-- Logo -->
                    <Border Grid.Column="0"
                            Background="{DynamicResource CardBackgroundBrush}"
                            CornerRadius="12"
                            Padding="12"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1">
                        <Image Source="avares://MarketAssistant/Assets/logo.png"
                               Width="80"
                               Height="80"
                               Stretch="UniformToFill"/>
                    </Border>

                    <!-- 应用信息 -->
                    <StackPanel Grid.Column="1"
                                VerticalAlignment="Center"
                                Spacing="8"
                                Margin="16,0">
                        <TextBlock Text="{Binding AppName}"
                                   FontSize="24"
                                   FontWeight="Bold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Text="{Binding Description}"
                                   FontSize="14"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"/>
                        <Border Background="{StaticResource InfoBrush}"
                                CornerRadius="4"
                                Padding="8,4"
                                BorderThickness="0"
                                HorizontalAlignment="Left">
                            <TextBlock Text="{Binding Version}"
                                       FontSize="11"
                                       Foreground="White"
                                       FontWeight="Bold"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </StackPanel>

                    <!-- 更新按钮区域 -->
                    <StackPanel Grid.Column="2"
                                VerticalAlignment="Center"
                                Spacing="8"
                                Margin="16,0">
                        <!-- 更新状态显示 -->
                        <TextBlock Text="{Binding UpdateStatus}"
                                   FontSize="11"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center"
                                   Width="100"
                                   TextAlignment="Center"/>

                        <!-- 检查更新按钮 -->
                        <Button Content="检查更新"
                                Classes="success"
                                FontSize="12"
                                FontWeight="Bold"
                                Height="36"
                                Width="100"
                                Command="{Binding CheckUpdateCommand}"
                                IsEnabled="{Binding IsCheckingUpdate, Converter={x:Static BoolConverters.Not}}"/>

                        <!-- 下载更新按钮 -->
                        <Button Content="下载更新"
                                Classes="warning"
                                FontSize="12"
                                FontWeight="Bold"
                                Height="36"
                                Width="100"
                                Command="{Binding DownloadUpdateCommand}"
                                IsVisible="{Binding HasNewVersion}"
                                IsEnabled="{Binding IsDownloading, Converter={x:Static BoolConverters.Not}}"/>

                        <!-- 下载进度条 -->
                        <ProgressBar Value="{Binding DownloadProgress}"
                                     Maximum="100"
                                     Height="4"
                                     Width="100"
                                     IsVisible="{Binding IsDownloading}"/>
                    </StackPanel>
                </Grid>
                </Panel>
            </controls:CardView>

            <!-- 版本更新信息 -->
            <controls:CardView Header="版本更新信息"
                               IsVisible="{Binding HasNewVersion}">
                <StackPanel Spacing="8">
                    <!-- 最新版本 -->
                    <Grid ColumnDefinitions="Auto,*">
                        <TextBlock Grid.Column="0"
                                   Text="最新版本："
                                   FontSize="14"
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource TextPrimaryBrush}"/>
                        <TextBlock Grid.Column="1"
                                   Text="{Binding LatestVersion}"
                                   FontSize="14"
                                   Foreground="{StaticResource SuccessBrush}"
                                   FontWeight="Bold"
                                   Margin="4,0,0,0"/>
                    </Grid>

                    <!-- 更新说明 -->
                    <TextBlock Text="更新说明："
                               FontSize="14"
                               FontWeight="SemiBold"
                               Foreground="{DynamicResource TextPrimaryBrush}"
                               Margin="0,8,0,0"/>
                    <Border Background="{DynamicResource ItemBackground}"
                            CornerRadius="8"
                            Padding="12"
                            BorderBrush="{DynamicResource BorderBrush}"
                            BorderThickness="1">
                        <TextBlock Text="{Binding ReleaseNotes}"
                                   FontSize="13"
                                   Foreground="{DynamicResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   MaxHeight="200"/>
                    </Border>
                </StackPanel>
            </controls:CardView>

            <!-- 功能选项列表 -->
            <controls:CardView Header="功能与支持">
                <ItemsControl ItemsSource="{Binding FeatureItems}">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="vm:FeatureItem">
                            <Border Classes="featureItem"
                                    Margin="0,0,0,8">
                                <Grid ColumnDefinitions="Auto, *, Auto">
                                    <!-- 图标容器 -->
                                    <Border Grid.Column="0"
                                            Classes="featureIcon">
										<svg:Svg Path="{Binding IconSource}"
                                                 Width="20"
                                                 Height="20"/>
                                    </Border>

                                    <!-- 标题和描述 -->
                                    <StackPanel Grid.Column="1"
                                                VerticalAlignment="Center"
                                                Spacing="4"
                                                Margin="16,0">
                                        <TextBlock Text="{Binding Title}"
                                                   Classes="featureTitle"/>
                                        <TextBlock Text="{Binding Title, StringFormat='查看{0}相关信息'}"
                                                   FontSize="12"
                                                   Foreground="{DynamicResource TextSecondaryBrush}"/>
                                    </StackPanel>

                                    <!-- 操作按钮 -->
                                    <Button Grid.Column="2"
                                            Content="{Binding ButtonText}"
                                            Classes="featureButton"
                                            Command="{Binding Command}"/>

                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </controls:CardView>
        </StackPanel>
    </ScrollViewer>
</UserControl>
