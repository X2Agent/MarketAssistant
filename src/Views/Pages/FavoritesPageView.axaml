<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MarketAssistant.ViewModels"
             xmlns:controls="using:MarketAssistant.Views.Controls"
             xmlns:converts="using:MarketAssistant.Converts"
             xmlns:stocks="using:MarketAssistant.Applications.Stocks.Models"
             xmlns:svg="clr-namespace:Avalonia.Svg.Skia;assembly=Svg.Controls.Skia.Avalonia"
             mc:Ignorable="d" d:DesignWidth="1200" d:DesignHeight="800"
             x:Class="MarketAssistant.Views.Pages.FavoritesPageView"
             x:DataType="vm:FavoritesPageViewModel">

    <UserControl.Resources>
        <converts:PriceChangeColorConverter x:Key="PriceChangeColorConverter"/>
        <converts:NullableVisibilityConverter x:Key="NullableVisibilityConverter"/>
    </UserControl.Resources>

    <Design.DataContext>
        <vm:FavoritesPageViewModel/>
    </Design.DataContext>

    <ScrollViewer Background="{DynamicResource CardBackgroundBrush}">
        <controls:CardView Margin="{StaticResource PagePadding}">
            <controls:CardView.Header>
                <Grid ColumnDefinitions="*,Auto">
                    <TextBlock Grid.Column="0" 
                               Text="我的收藏" 
                               FontSize="{StaticResource LargeFontSize}" 
                               FontWeight="Bold" 
                               Foreground="{DynamicResource TextPrimaryBrush}" />
                    <svg:Svg Grid.Column="1" 
                             Path="/Assets/Images/tab_favorites_on.svg" 
                             Width="{StaticResource DefaultIconSize}" 
                             Height="{StaticResource DefaultIconSize}" 
                             VerticalAlignment="Center" />
                </Grid>
            </controls:CardView.Header>

            <!-- 主内容区域 -->
            <Grid>
                <!-- 加载指示器 -->
                <StackPanel IsVisible="{Binding IsBusy}"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Spacing="{StaticResource LargeSpacing}">
                    <controls:LoadingDots DotSize="{StaticResource IndicatorSize}" />
                    <TextBlock Text="正在加载收藏列表..." 
                               FontSize="{StaticResource LabelFontSize}"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource TextSecondaryBrush}"/>
                </StackPanel>

                <!-- 内容区域（非加载状态） -->
                <Grid IsVisible="{Binding !IsBusy}">
                    <!-- 空视图 -->
                    <StackPanel IsVisible="{Binding !Stocks.Count}"
                                HorizontalAlignment="Center" 
                                VerticalAlignment="Center" 
                                Spacing="{StaticResource DefaultSpacing}">
                        <svg:Svg Path="/Assets/Images/tab_favorites.svg" 
                                 Width="{StaticResource LargeIconSize}" 
                                 Height="{StaticResource LargeIconSize}" 
                                 HorizontalAlignment="Center"/>
                        <TextBlock Text="暂无收藏股票" 
                                   HorizontalAlignment="Center" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" />
                        <TextBlock Text="在股票详情页点击收藏按钮添加" 
                                   HorizontalAlignment="Center" 
                                   Foreground="{DynamicResource TextSecondaryBrush}" 
                                   FontSize="{StaticResource SmallFontSize}" />
                    </StackPanel>

                    <!-- 股票网格 -->
                    <ItemsControl ItemsSource="{Binding Stocks}"
                                  IsVisible="{Binding Stocks.Count}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <UniformGrid Columns="4" VerticalAlignment="Top"/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate x:DataType="stocks:StockInfo">
                            <Border Classes="stock-card"
                                    Margin="{StaticResource SmallMargin}"
                                    Tapped="OnStockItemTapped"
                                    Tag="{Binding .}"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Top">
                                <Grid RowDefinitions="Auto,Auto,Auto">
                                    <!-- 顶部信息栏 -->
                                    <Grid ColumnDefinitions="*,Auto" Margin="{StaticResource BottomMargin}">
                                        <StackPanel Orientation="Horizontal" 
                                                    Spacing="{StaticResource TinySpacing}"
                                                    VerticalAlignment="Center">
                                            <Border Background="{DynamicResource SurfaceVariantBrush}"
                                                    CornerRadius="{StaticResource TinyCornerRadius}"
                                                    Padding="{StaticResource TinyPadding}">
                                                <TextBlock FontSize="{StaticResource SmallFontSize}" 
                                                           FontWeight="Bold"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           VerticalAlignment="Center">
                                                    <Run Text="{Binding Market}"/>
                                                    <Run Text="{Binding Code}"/>
                                                </TextBlock>
                                            </Border>
                                            <Border Background="{DynamicResource SurfaceVariantBrush}"
                                                    CornerRadius="{StaticResource TinyCornerRadius}"
                                                    Padding="{StaticResource TinyPadding}"
                                                    IsVisible="{Binding SectorName, Converter={StaticResource NullableVisibilityConverter}}">
                                                <TextBlock Text="{Binding SectorName}"
                                                           FontSize="{StaticResource SmallFontSize}"
                                                           Foreground="{DynamicResource TextSecondaryBrush}"
                                                           VerticalAlignment="Center"/>
                                            </Border>
                                        </StackPanel>
                                        
                                        <!-- 删除按钮 -->
                                        <Button Grid.Column="1"
                                                Classes="delete-button"
                                                Width="{StaticResource TinyIconButtonSize}" 
                                                Height="{StaticResource TinyIconButtonSize}" 
                                                Cursor="Hand"
                                                Background="Transparent"
                                                BorderThickness="0"
                                                Padding="0"
                                                Tapped="OnDeleteButtonTapped"
                                                Command="{Binding $parent[UserControl].((vm:FavoritesPageViewModel)DataContext).RemoveFavoriteCommand}" 
                                                CommandParameter="{Binding .}">
                                            <PathIcon Data="M19,4H15.5L14.5,3H9.5L8.5,4H5V6H19M6,19A2,2 0 0,0 8,21H16A2,2 0 0,0 18,19V7H6V19Z"
                                                      Width="{StaticResource TinyIconSize}" 
                                                      Height="{StaticResource TinyIconSize}"
                                                      Foreground="{DynamicResource ErrorBrush}" />
                                        </Button>
                                    </Grid>

                                    <!-- 股票名称 -->
                                    <TextBlock Grid.Row="1"
                                               Text="{Binding Name}" 
                                               FontSize="{StaticResource SubTitleFontSize}" 
                                               FontWeight="Bold" 
                                               Foreground="{DynamicResource TextPrimaryBrush}"
                                               Margin="{StaticResource BottomMargin}"/>
                                    
                                    <!-- 底部价格信息 -->
                                    <Grid Grid.Row="2" ColumnDefinitions="*,Auto" VerticalAlignment="Bottom">
                                        <TextBlock Text="{Binding CurrentPrice}" 
                                                   FontSize="{StaticResource LargeFontSize}" 
                                                   FontWeight="Bold" 
                                                   Foreground="{DynamicResource TextPrimaryBrush}"
                                                   VerticalAlignment="Center"/>
                                        
                                        <Border Grid.Column="1"
                                                Background="{Binding ChangePercentage, Converter={StaticResource PriceChangeColorConverter}}"
                                                CornerRadius="{StaticResource TinyCornerRadius}"
                                                Padding="{StaticResource TinyPadding}"
                                                VerticalAlignment="Center">
                                            <TextBlock Text="{Binding ChangePercentage}" 
                                                       FontSize="{StaticResource SmallFontSize}" 
                                                       FontWeight="Bold"
                                                       Foreground="White"/>
                                        </Border>
                                    </Grid>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
                </Grid>
            </Grid>
        </controls:CardView>
    </ScrollViewer>
</UserControl>