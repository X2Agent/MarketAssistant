<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- 全局按钮默认样式 -->
    <Style Selector="Button">
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- 时间周期按钮样式 -->
    <Style Selector="Button.period-button">
        <Setter Property="FontSize" Value="{StaticResource SmallFontSize}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="CornerRadius" Value="{StaticResource SmallCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource DefaultCardPadding}"/>
        <Setter Property="BorderThickness" Value="{StaticResource DefaultBorderThickness}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{DynamicResource SystemAccentColor}"/>
    </Style>
    <Style Selector="Button.period-button.selected">
        <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
        <Setter Property="Foreground" Value="White"/>
    </Style>
    <Style Selector="Button.period-button:pointerover">
        <Setter Property="Background" Value="{DynamicResource HoverBackgroundBrush}"/>
    </Style>
    <Style Selector="Button.period-button.selected:pointerover">
        <Setter Property="Background" Value="{DynamicResource PrimaryDarkBrush}"/>
    </Style>

    <!-- 功能按钮样式 -->
    <Style Selector="Button.feature-button">
        <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="FontSize" Value="{StaticResource SmallFontSize}"/>
        <Setter Property="FontWeight" Value="Bold"/>
        <Setter Property="Height" Value="{StaticResource ButtonHeight}"/>
        <Setter Property="Padding" Value="{StaticResource CompactCardPadding}"/>
        <Setter Property="CornerRadius" Value="{StaticResource SmallCornerRadius}"/>
        <Setter Property="BorderThickness" Value="{StaticResource NoBorderThickness}"/>
    </Style>

    <!-- 成功按钮样式 -->
    <Style Selector="Button.success">
        <Setter Property="Background" Value="{StaticResource SuccessBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
        <Setter Property="BorderThickness" Value="{StaticResource NoBorderThickness}"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- 警告按钮样式 -->
    <Style Selector="Button.warning">
        <Setter Property="Background" Value="{StaticResource WarningBrush}"/>
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
        <Setter Property="BorderThickness" Value="{StaticResource NoBorderThickness}"/>
        <Setter Property="HorizontalContentAlignment" Value="Center"/>
        <Setter Property="VerticalContentAlignment" Value="Center"/>
    </Style>

    <!-- 删除按钮样式（悬停显示） -->
    <Style Selector="Button.delete-button">
        <Setter Property="Opacity" Value="0"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>

    <!-- 收藏按钮样式（悬停显示） -->
    <Style Selector="Button.favorite-button">
        <Setter Property="Opacity" Value="0"/>
        <Setter Property="IsHitTestVisible" Value="False"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Setter Property="Transitions">
            <Transitions>
                <DoubleTransition Property="Opacity" Duration="0:0:0.15"/>
            </Transitions>
        </Setter>
    </Style>

</Styles>
