<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- 选股模式卡片样式 -->
    <Style Selector="Border.mode-card">
        <Setter Property="Padding" Value="{StaticResource PagePadding}"/>
        <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
        <Setter Property="BorderThickness" Value="{StaticResource DefaultBorderThickness}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Border.mode-card.selected">
        <Setter Property="BorderThickness" Value="{StaticResource ThickBorderThickness}"/>
        <Setter Property="Background" Value="{DynamicResource SystemAccentColor}"/>
    </Style>
    <Style Selector="Border.mode-card TextBlock.mode-name">
        <Setter Property="Foreground" Value="{DynamicResource SystemAccentColor}"/>
    </Style>
    <Style Selector="Border.mode-card.selected TextBlock.mode-name">
        <Setter Property="Foreground" Value="White"/>
    </Style>

    <!-- 快速策略卡片样式 -->
    <Style Selector="Border.strategy-card">
        <Setter Property="Padding" Value="{StaticResource DefaultCardPadding}"/>
        <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
        <Setter Property="BorderThickness" Value="{StaticResource DefaultBorderThickness}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource SystemAccentColor}"/>
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <!-- 股票卡片样式 -->
    <Style Selector="Border.stock-card">
        <Setter Property="Background" Value="{DynamicResource ItemBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource DefaultBorderThickness}"/>
        <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource DefaultCardPadding}"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Border.stock-card[Cursor=Hand]:pressed">
        <Setter Property="Opacity" Value="0.8"/>
    </Style>
    <Style Selector="Border.stock-card:pointerover Button.delete-button">
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="IsHitTestVisible" Value="True"/>
    </Style>

    <!-- 热门股票卡片样式 -->
    <Style Selector="Border.hot-stock-card">
        <Setter Property="Background" Value="{DynamicResource ItemBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource DefaultBorderThickness}"/>
        <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource CompactCardPadding}"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Border.hot-stock-card:pointerover Button.favorite-button">
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="IsHitTestVisible" Value="True"/>
    </Style>

    <!-- 最近查看卡片样式 -->
    <Style Selector="Border.recent-stock-card">
        <Setter Property="Background" Value="{DynamicResource ItemBackgroundBrush}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource DefaultBorderThickness}"/>
        <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource DefaultCardPadding}"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Border.recent-stock-card:pointerover Button.favorite-button">
        <Setter Property="Opacity" Value="1"/>
        <Setter Property="IsHitTestVisible" Value="True"/>
    </Style>

    <!-- 新闻卡片样式 -->
    <Style Selector="Border.news-card">
        <Setter Property="Background" Value="{DynamicResource CardBackgroundBrush}"/>
        <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource DefaultCardPadding}"/>
        <Setter Property="Cursor" Value="Hand"/>
    </Style>
    <Style Selector="Border.news-card TextBlock">
        <Setter Property="Cursor" Value="Hand"/>
    </Style>

    <!-- 功能项样式 -->
    <Style Selector="Border.feature-item">
        <Setter Property="Background" Value="{DynamicResource ItemBackgroundBrush}"/>
        <Setter Property="Padding" Value="{StaticResource DefaultCardPadding}"/>
        <Setter Property="Margin" Value="{StaticResource SmallBottomMargin}"/>
        <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
        <Setter Property="BorderBrush" Value="{DynamicResource BorderBrush}"/>
        <Setter Property="BorderThickness" Value="{StaticResource DefaultBorderThickness}"/>
    </Style>

    <Style Selector="Border.feature-icon">
        <Setter Property="Background" Value="{DynamicResource SurfaceVariantBrush}"/>
        <Setter Property="CornerRadius" Value="{StaticResource CardCornerRadius}"/>
        <Setter Property="Padding" Value="{StaticResource CompactCardPadding}"/>
        <Setter Property="BorderThickness" Value="{StaticResource NoBorderThickness}"/>
    </Style>
    
    <Style Selector="TextBlock.feature-title">
        <Setter Property="FontSize" Value="{StaticResource MediumFontSize}"/>
        <Setter Property="FontWeight" Value="SemiBold"/>
    </Style>

</Styles>

