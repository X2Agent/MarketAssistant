<?xml version="1.0" encoding="UTF-8" ?>
<?xaml-comp compile="true" ?>
<ResourceDictionary 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml">

    <!-- Note: For Android please see also Platforms\Android\Resources\values\colors.xml -->

    <Color x:Key="Primary">#512BD4</Color>
    <Color x:Key="PrimaryDark">#ac99ea</Color>
    <Color x:Key="PrimaryDarkText">#242424</Color>
    <Color x:Key="Secondary">#DFD8F7</Color>
    <Color x:Key="SecondaryDarkText">#9880e5</Color>
    <Color x:Key="Tertiary">#2B0B98</Color>

    <Color x:Key="White">White</Color>
    <Color x:Key="Black">Black</Color>
    <Color x:Key="Magenta">#D600AA</Color>
    <Color x:Key="MidnightBlue">#190649</Color>
    <Color x:Key="OffBlack">#1f1f1f</Color>

    <Color x:Key="Gray100">#E1E1E1</Color>
    <Color x:Key="Gray200">#C8C8C8</Color>
    <Color x:Key="Gray300">#ACACAC</Color>
    <Color x:Key="Gray400">#919191</Color>
    <Color x:Key="Gray500">#6E6E6E</Color>
    <Color x:Key="Gray600">#404040</Color>
    <Color x:Key="Gray700">#374151</Color>
    <Color x:Key="Gray800">#1F2937</Color>
    <Color x:Key="Gray900">#212121</Color>
    <Color x:Key="Gray950">#141414</Color>

    <!-- 扩展颜色定义 - 页面通用颜色 -->
    <Color x:Key="CardBackgroundLight">#f8f9fa</Color>
    <Color x:Key="CardBackgroundDark">#2c2c2c</Color>
    <Color x:Key="ItemBackgroundLight">White</Color>
    <Color x:Key="ItemBackgroundDark">#3c3c3c</Color>
    <Color x:Key="SurfaceVariantLight">#f1f3f4</Color>
    <Color x:Key="SurfaceVariantDark">#3c3c3c</Color>
    
    <!-- 文本颜色 -->
    <Color x:Key="TextPrimaryLight">#212529</Color>
    <Color x:Key="TextPrimaryDark">#e0e0e0</Color>
    <Color x:Key="TextSecondaryLight">#6c757d</Color>
    <Color x:Key="TextSecondaryDark">#a0a0a0</Color>
    
    <!-- 功能性颜色 -->
    <Color x:Key="Success">#28a745</Color>
    <Color x:Key="Warning">#ffc107</Color>
    <Color x:Key="Info">#17a2b8</Color>
    <Color x:Key="Error">#dc3545</Color>
    <Color x:Key="UpColor">#dc3545</Color>
    <Color x:Key="DownColor">#28a745</Color>
    
    <!-- 设置页面专用颜色 -->
    <Color x:Key="LabelTextColor">#6c757d</Color>
    <Color x:Key="PrimaryTextColor">#212529</Color>
    <Color x:Key="SecondaryTextColor">#6c757d</Color>
    <Color x:Key="PrimaryColor">#007bff</Color>
    <Color x:Key="PrimaryButtonColor">#007bff</Color>
    <Color x:Key="SuccessButtonColor">#28a745</Color>
    <Color x:Key="CheckBoxColor">#007bff</Color>
    <Color x:Key="ErrorColor">#dc3545</Color>
    
    <!-- 警告相关颜色 -->
    <Color x:Key="WarningLight">#fff3cd</Color>
    <Color x:Key="WarningDark">#664d03</Color>
    <Color x:Key="OnWarningLight">#856404</Color>
    <Color x:Key="OnWarningDark">#ffecb5</Color>
    
    <!-- 边框和分割线 -->
    <Color x:Key="BorderLight">#e9ecef</Color>
    <Color x:Key="BorderDark">#404040</Color>
    <Color x:Key="DividerLight">#e9ecef</Color>
    <Color x:Key="DividerDark">#404040</Color>
    
    <!-- 阴影颜色 -->
    <Color x:Key="ShadowLight">#77000000</Color>
    <Color x:Key="ShadowDark">#00000010</Color>
    
    <!-- 渐变色定义 -->
    <Color x:Key="GradientWhite">#ffffff</Color>
    <Color x:Key="GradientLightGray">#f8f9fa</Color>
    <Color x:Key="GradientMediumGray">#e9ecef</Color>
    <Color x:Key="PrimaryBlue">#007bff</Color>
    <Color x:Key="PrimaryBlueLight">#4dabf7</Color>
    
    <!-- 常用硬编码颜色 -->
    <Color x:Key="MediumGray">#6c757d</Color>
    <Color x:Key="DarkText">#212529</Color>
    <Color x:Key="InfoBlue">#17a2b8</Color>
    <Color x:Key="InfoBlueLight">#0dcaf0</Color>
    <Color x:Key="MediumDarkGray">#495057</Color>
    <Color x:Key="SemiTransparentWhite">#80FFFFFF</Color>
    
    <!-- 特殊用途颜色 -->
    <Color x:Key="MaterialBlue">#2196F3</Color>
    <Color x:Key="ErrorRed">#ff6b6b</Color>

    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource Primary}"/>
    <SolidColorBrush x:Key="SecondaryBrush" Color="{StaticResource Secondary}"/>
    <SolidColorBrush x:Key="TertiaryBrush" Color="{StaticResource Tertiary}"/>
    <SolidColorBrush x:Key="WhiteBrush" Color="{StaticResource White}"/>
    <SolidColorBrush x:Key="BlackBrush" Color="{StaticResource Black}"/>

    <SolidColorBrush x:Key="Gray100Brush" Color="{StaticResource Gray100}"/>
    <SolidColorBrush x:Key="Gray200Brush" Color="{StaticResource Gray200}"/>
    <SolidColorBrush x:Key="Gray300Brush" Color="{StaticResource Gray300}"/>
    <SolidColorBrush x:Key="Gray400Brush" Color="{StaticResource Gray400}"/>
    <SolidColorBrush x:Key="Gray500Brush" Color="{StaticResource Gray500}"/>
    <SolidColorBrush x:Key="Gray600Brush" Color="{StaticResource Gray600}"/>
    <SolidColorBrush x:Key="Gray700Brush" Color="{StaticResource Gray700}"/>
    <SolidColorBrush x:Key="Gray800Brush" Color="{StaticResource Gray800}"/>
    <SolidColorBrush x:Key="Gray900Brush" Color="{StaticResource Gray900}"/>
    <SolidColorBrush x:Key="Gray950Brush" Color="{StaticResource Gray950}"/>
    
    <!-- 扩展画刷定义 -->
    <SolidColorBrush x:Key="SuccessBrush" Color="{StaticResource Success}"/>
    <SolidColorBrush x:Key="WarningBrush" Color="{StaticResource Warning}"/>
    <SolidColorBrush x:Key="InfoBrush" Color="{StaticResource Info}"/>
    <SolidColorBrush x:Key="ErrorBrush" Color="{StaticResource Error}"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="{AppThemeBinding Light={StaticResource CardBackgroundLight}, Dark={StaticResource CardBackgroundDark}}"/>
    <SolidColorBrush x:Key="ItemBackgroundBrush" Color="{AppThemeBinding Light={StaticResource ItemBackgroundLight}, Dark={StaticResource ItemBackgroundDark}}"/>
    <SolidColorBrush x:Key="TextPrimaryBrush" Color="{AppThemeBinding Light={StaticResource TextPrimaryLight}, Dark={StaticResource TextPrimaryDark}}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{AppThemeBinding Light={StaticResource TextSecondaryLight}, Dark={StaticResource TextSecondaryDark}}"/>
    
    <!-- 新增画刷定义 -->
    <SolidColorBrush x:Key="MediumGrayBrush" Color="{StaticResource MediumGray}"/>
    <SolidColorBrush x:Key="DarkTextBrush" Color="{StaticResource DarkText}"/>
    <SolidColorBrush x:Key="InfoBlueBrush" Color="{StaticResource InfoBlue}"/>
    <SolidColorBrush x:Key="InfoBlueLightBrush" Color="{StaticResource InfoBlueLight}"/>
    <SolidColorBrush x:Key="PrimaryBlueBrush" Color="{StaticResource PrimaryBlue}"/>
    <SolidColorBrush x:Key="SemiTransparentWhiteBrush" Color="{StaticResource SemiTransparentWhite}"/>
</ResourceDictionary>