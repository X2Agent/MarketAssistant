                                               IsVisible="{Binding Status, Converter={toolkit:EnumToBoolConverter}, ConverterParameter={x:Static viewmodels:MessageStatus.Failed}}"
                                               VerticalOptions="Start"
                                               Margin="4,0,0,0" />
                                    </Grid>
                                </StackLayout>
                            </Border>
