        </Border>
        
        <!-- é”™è¯¯çŠ¶æ€æ˜¾ç¤ºåŒºåŸŸ -->
        <Border Grid.Row="1" Style="{StaticResource PrimaryCardStyle}" VerticalOptions="FillAndExpand"
                IsVisible="{Binding HasError}">
            <VerticalStackLayout HorizontalOptions="Center" 
