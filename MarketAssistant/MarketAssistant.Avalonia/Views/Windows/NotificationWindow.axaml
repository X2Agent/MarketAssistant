<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        x:Class="MarketAssistant.Avalonia.Views.NotificationWindow"
        Width="380"
        Height="100"
        CanResize="False"
        ShowInTaskbar="False"
        SystemDecorations="None"
        Background="Transparent"
        TransparencyLevelHint="Transparent"
        Topmost="True"
        WindowStartupLocation="Manual">
    
    <Border Name="NotificationBorder"
            Background="#2D2D30"
            BorderBrush="#3F3F46"
            BorderThickness="1"
            CornerRadius="12"
            Padding="16"
            Margin="8"
            BoxShadow="0 8 24 0 #60000000">
        
        <Grid ColumnDefinitions="Auto,*,Auto">
            
            <!-- 图标区域 -->
            <Border Grid.Column="0"
                    Width="40"
                    Height="40"
                    CornerRadius="20"
                    Background="#4CAF50"
                    VerticalAlignment="Center"
                    Margin="0,0,16,0">
                <TextBlock Text="✓"
                           FontSize="22"
                           FontWeight="Bold"
                           Foreground="White"
                           HorizontalAlignment="Center"
                           VerticalAlignment="Center"/>
            </Border>
            
            <!-- 消息内容 -->
            <StackPanel Grid.Column="1"
                        VerticalAlignment="Center"
                        Spacing="4">
                <TextBlock Name="MessageText"
                           Text="操作成功"
                           FontSize="15"
                           FontWeight="Medium"
                           Foreground="#FFFFFF"
                           TextWrapping="Wrap"
                           LineHeight="20"/>
            </StackPanel>
            
            <!-- 关闭按钮 -->
            <Button Grid.Column="2"
                    Name="CloseButton"
                    Content="✕"
                    Width="28"
                    Height="28"
                    FontSize="18"
                    Foreground="#8F8F8F"
                    Background="Transparent"
                    BorderThickness="0"
                    VerticalAlignment="Center"
                    Margin="12,0,0,0"
                    Padding="0"
                    CornerRadius="14"
                    HorizontalContentAlignment="Center"
                    VerticalContentAlignment="Center"
                    Cursor="Hand">
                <Button.Styles>
                    <Style Selector="Button:pointerover">
                        <Setter Property="Background" Value="#3F3F46"/>
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                    </Style>
                    <Style Selector="Button:pressed">
                        <Setter Property="Background" Value="#4F4F56"/>
                        <Setter Property="Foreground" Value="#FFFFFF"/>
                    </Style>
                </Button.Styles>
            </Button>
        </Grid>
    </Border>
</Window>
