<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:MarketAssistant.Avalonia.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="MarketAssistant.Avalonia.Views.FavoritesPageView"
             x:DataType="vm:FavoritesPageViewModel">

    <Design.DataContext>
        <vm:FavoritesPageViewModel/>
    </Design.DataContext>

    <Grid RowDefinitions="Auto,*" Margin="16">
        <!-- 标题 -->
        <TextBlock Grid.Row="0" 
                   Text="{Binding Title}" 
                   FontSize="24" 
                   FontWeight="Bold" 
                   Margin="0,0,0,16"/>

        <!-- 收藏列表 -->
        <ScrollViewer Grid.Row="1">
            <ItemsControl ItemsSource="{Binding FavoriteItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate x:DataType="vm:FavoriteItemViewModel">
                        <Border Background="{DynamicResource CardBackgroundFillColorDefaultBrush}"
                                CornerRadius="8"
                                Padding="16"
                                Margin="0,0,0,8"
                                BorderBrush="{DynamicResource CardStrokeColorDefaultBrush}"
                                BorderThickness="1">
                            <Grid ColumnDefinitions="Auto,*,Auto">
                                <!-- 股票代码 -->
                                <TextBlock Grid.Column="0" 
                                           Text="{Binding Code}" 
                                           FontWeight="SemiBold" 
                                           FontSize="16"
                                           VerticalAlignment="Center"/>

                                <!-- 股票名称 -->
                                <TextBlock Grid.Column="1" 
                                           Text="{Binding Name}" 
                                           FontSize="14" 
                                           Margin="12,0,0,0"
                                           VerticalAlignment="Center"/>

                                <!-- 市场标识 -->
                                <Border Grid.Column="2" 
                                        Background="{DynamicResource SystemAccentColorLight2}"
                                        CornerRadius="4"
                                        Padding="8,4">
                                    <TextBlock Text="{Binding Market}" 
                                               FontSize="12" 
                                               FontWeight="SemiBold"/>
                                </Border>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
